.container
  %h1 Create Sync
  .row
    .col
      %ul#myTab.nav.nav-tabs{:role => "tablist"}
        %li.nav-item
          %a#sync-customer-tab.nav-link.active{"aria-controls" => "home", "aria-selected" => "true", "data-toggle" => "tab", :href => "#home", :role => "tab"} Customer
        %li.nav-item
          %a#sync-payment-tab.nav-link{"aria-controls" => "profile", "aria-selected" => "false", "data-toggle" => "tab", :href => "#profile", :role => "tab"} Payment
        %li.nav-item
          %a#sync-invoice-tab.nav-link{"aria-controls" => "contact", "aria-selected" => "false", "data-toggle" => "tab", :href => "#contact", :role => "tab"} Invoice
      #myTabContent.tab-content
        #home.tab-pane.fade.show.active{"aria-labelledby" => "sync-customer-tab", :role => "tabpanel"}
          .my-3
            %h4 Customer
            = form_tag dev_syncs_path, method: :post do
              .form-group
                = text_area_tag :request_body, JSON.pretty_generate(Util::InputHelpers::Customer.new.sync_request_body(account: current_account)), class: 'w-100 form-control', rows: 10
              .form-group
                = submit_tag 'Send', class: 'btn btn-primary form-control'
        #profile.tab-pane.fade{"aria-labelledby" => "sync-payment-tab", :role => "tabpanel"}
          .my-3
            %h4 Payment
            = form_tag dev_syncs_path, method: :post do
              .form-group
                = text_area_tag :request_body, JSON.pretty_generate(Util::InputHelpers::Payment.new.sync_request_body(account: current_account)), class: 'w-100 form-control', rows: 10
              .form-group
                = submit_tag 'Send', class: 'btn btn-primary form-control'
        #contact.tab-pane.fade{"aria-labelledby" => "sync-invoice-tab", :role => "tabpanel"}
          .my-3
            %h4 Coming Soon